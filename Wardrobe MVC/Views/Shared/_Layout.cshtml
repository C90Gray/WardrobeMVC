<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Chris's Closet</title>
    <link href="https://fonts.googleapis.com/css?family=Rammetto+One" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Limelight" rel="stylesheet">
    <script src="~/Content/myscript.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body onload="Loader(); CustomDescription(); PlayAudio()" oncopy="displayOnCopy()" style="margin:0;">

    <div id="loader">
        <img class="closetloader" src="~/Content/Images/Chris's Closet.jpg" />
    </div>

    <div id="mtext" class="modal" style="display:none">
        <div class="modal-content">
            <span class="close" onclick="closeModal()">&times;</span>
            <h2>
                Woah there, you better cite this content. Here's some citations for you:
            </h2>
            <hr />
            <p>
                <hr />
                MLA:
                Gray, Christopher M. “Chris's Closet” Chris's Closet, Super Dope Inc., @DateTime.Today, www.chrisscloset.com.
                <hr />
                APA:
                Gray, C. M. (@DateTime.Today). Chris's Closet. Retrieved from www.chrisscloset.com
            </p>
        </div>
    </div>

    <div style="display:none;" id="myDiv" class="animate-bottom">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>
                            <a class="navbar-brand" href="~/Home/Start">
                                <img class="logo" src="~/Content/Images/Chris's Closet.jpg" />
                            </a>
                        </li>
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Tops", "Index", "Tops")</li>
                        <li>@Html.ActionLink("Bottoms", "Index", "Bottoms")</li>
                        <li>@Html.ActionLink("Shoes", "Index", "Shoes")</li>
                        <li>@Html.ActionLink("Accessories", "Index", "Accessories")</li>
                        <li>@Html.ActionLink("Outfits", "Index", "Outfits")</li>
                        <li>@Html.ActionLink("Checkout", "Catelog", "Home")</li>
                        <li>
                            <a class="btn btn-danger" id="toggle" onclick="ToggleImages()">Hide Images</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer id="foot" onmouseover="CopySwapON()" onmouseout="CopySwapOFF()">
                <p>Copyright @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </div>

</body>
</html>
